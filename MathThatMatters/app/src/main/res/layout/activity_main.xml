<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.olivi.maththatmatters.MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>


    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Measurement"
        android:id="@+id/button_measurement"
        android:onClick="measurementClicked"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Geometry"
        android:id="@+id/button_geometry"
        android:textAlignment="center"
        android:onClick="geoClicked"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_measurement"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Probability"
        android:id="@+id/button_probability"
        android:onClick="probabilityClicked"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_geometry"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Achievements"
        android:id="@+id/button_achievements"
        android:onClick="achievementsClicked"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_probability"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"/>

    />
</RelativeLayout>
