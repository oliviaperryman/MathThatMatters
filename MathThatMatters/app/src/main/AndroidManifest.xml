<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.olivi.maththatmatters">

    <application
        android:allowBackup="true"
        android:icon="@drawable/m_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NetGame"
            android:label="@string/title_activity_netgame"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MeasurementGame"
            android:label="@string/title_activity_measurementgame"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ClassificationGame"
            android:label="@string/title_activity_classificationgame"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MeasurementActivity"
            android:label="@string/title_activity_measurement"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".GeometryActivity"
            android:label="@string/title_activity_geometry"
            android:theme="@style/AppTheme"></activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->

        <activity
            android:name=".AchievementActivity"
            android:label="@string/title_activity_achievement"
            android:theme="@style/AppTheme"></activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
